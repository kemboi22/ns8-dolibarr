import agent
import os

database = "database.env"

if not os.path.exists(database):
    mariadb_config = {
        'MARIADB_ROOT_PASSWORD': 'Dolibarr,1234',
        'MARIADB_DATABASE': 'dolibarr',
        'MARIADB_USER': 'dolibarr',
        'MARIADB_PASSWORD': 'Dolibarr,1234',
        'MARIADB_AUTO_UPGRADE': '1'
    }
    agent.write_envfile("database.env", mariadb_config)
    dolibarr_config = {
        'DOLI_DB_TYPE': 'mysqli',
        'DOLI_DB_HOST': 'mariadb-app',
        'DOLI_DB_USER': 'root',
        'DOLI_DB_PASSWORD': 'Dolibarr,1234',
        'DOLI_DB_HOST_PORT': 3306,
        'DOLI_DB_NAME': 'dolibarr',
    }
    agent.write_envfile("dolibarr-db.env", dolibarr_config)
